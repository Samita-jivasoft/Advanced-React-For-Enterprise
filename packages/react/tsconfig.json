{
    "compilerOptions": {
      "outDir": "lib",
      "module": "esnext",
      "lib": ["DOM", "ESNext"],
      "jsx": "react",
      "allowSyntheticDefaultImports": true,
      "target": "esnext",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "declaration": true,
      "moduleResolution": "node",
      "types": ["jest", "@testing-library/jest-dom"] //Added this pecify type declaration files that TypeScript should include while compiling
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
  }
  